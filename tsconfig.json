{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "baseUrl": ".",
    "paths": {
      "@/root/*": ["./*"],
      "@/shared/modules/global": ["www/shared/modules/global"],
      "@/shared/modules/project": ["www/shared/modules/project"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "typings/**/*.d.ts",
    "jest.config.js",
    "jest.setup.js",
    "next.config.js",
    "postcss.config.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
